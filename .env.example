# Backend Environment Variables
# Copy this file to `.env` and update values

# Server Configuration
PORT=5000
NODE_ENV=development
HOST=localhost

# Database
DB_URL=mongodb://localhost:27017/nutrisearch
DB_NAME=nutrisearch

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Session
SESSION_SECRET=your_session_secret_key_change_this

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_CREDENTIALS=true

# Semantic Search & Ontology
# Protégé OWL File Path (relative to backend root)
ONTOLOGY_FILE=./data/nutrisearch-ontology.owl

# Fuseki SPARQL Configuration (Optional - for advanced features)
FUSEKI_URL=http://localhost:3030
FUSEKI_DATASET=nutrisearch
FUSEKI_ENABLED=false
FUSEKI_USERNAME=admin
FUSEKI_PASSWORD=admin

# AI Service Configuration (Google Gemini)
# Get your API key from: https://aistudio.google.com/api-key
AI_SERVICE_ENABLED=true
AI_MODEL=gemini-flash-latest
GEMINI_API_KEY=AIzaSyCg87tS6i0hBeP3ePvhaiLD5avw9T2V2Co

# Alternative Gemini Models:
# AI_MODEL=gemini-1.5-pro (More powerful, more tokens)
# AI_MODEL=gemini-2.0-flash (Latest model)
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads

# Email (Optional)
EMAIL_SERVICE=gmail
EMAIL_FROM=noreply@nutrisearch.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Debug
DEBUG=nutrisearch:*
VERBOSE=false

# Security
HELMET_ENABLED=true
HTTPS_REDIRECT=false
